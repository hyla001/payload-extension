{
    "manifest_version": 3,
    "name": "LUHUT BINSHAR",
    "version": "1.0.0",
    "description": "Security Testing Payload Manager - Store, search, and copy payloads for penetration testing",
    "author": "LUHUT BINSHAR",
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "assets/icons/icon16.png",
            "48": "assets/icons/icon48.png",
            "128": "assets/icons/icon128.png"
        }
    },
    "icons": {
        "16": "assets/icons/icon16.png",
        "48": "assets/icons/icon48.png",
        "128": "assets/icons/icon128.png"
    },
    "permissions": [
        "storage",
        "clipboardWrite",
        "alarms"
    ],
    "host_permissions": [
        "https://raw.githubusercontent.com/*"
    ],
    "background": {
        "service_worker": "background/updater.js"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+L",
                "mac": "Command+Shift+L"
            },
            "description": "Buka PELURU LUHUT"
        }
    }
}